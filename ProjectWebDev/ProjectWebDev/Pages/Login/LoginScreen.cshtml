@page
@model ProjectWebDev.Pages.Login.LoginScreen

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Login Screen</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/navbarcss.css"/>
</head>
<body>
 <nav class="navbar navbar-expand-lg navbar-light" id="navbarid">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Comicollection</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="navbar-toggler-icon"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav  nav-pills nav-fill">
                        <li class="nav-item">
                            <a class="nav-link" id="navbg" href="/Overzichten/UltimateCollectionUser">
                                <text style="color: white">Ultimate Collection</text>
                            </a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" id="navbg" href="/Overzichten/SupportScreen">
                            <text style="color: white">Support</text>
                        </a>
                        <li class="nav-item">
                            <a class="nav-link" id="navbg" href="">
                                <text style="color: white">My Collection</text>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" id="navactive" aria-current="page" id="navbg" href="">
                                <text style="color: white">Login</text>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav> 
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row m-3">
            <div class="col-3">
                <label asp-for="LoginCredential.Username"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="LoginCredential.Username" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="LoginCredential.Username"></span>
        </div>
        <div class="form-group row m-3">
            <div class="col-3">
                <label asp-for="LoginCredential.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="LoginCredential.Password" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="LoginCredential.Password"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 m-4">
                <input type="submit" class="btn btn-primary" value="Login"/>
                <a href="/Login/RegisterScreen">Register Now</a>
            </div>
            
            <span class="text-danger" > @Model.Warning </span>
        </div>
    </form>
</div>
</body>
</html>