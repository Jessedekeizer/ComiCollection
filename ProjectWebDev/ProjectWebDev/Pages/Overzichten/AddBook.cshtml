@page
@model ProjectWebDev.Pages.Overzichten.AddBook

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/navbarcss.css">
    <link rel="stylesheet" href="/css/AddBookStyle.css">
    <title></title>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light" id="navbarid">
    <div class="container-fluid">
        <a class="navbar-brand" href="/Overzichten/HomeScreen">Comicollection</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <i class="navbar-toggler-icon"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav  nav-pills nav-fill">
                <li class="nav-item">
                    <a class="nav-link active" id="navactive" aria-current="page" href="/Overzichten/UltimateCollection">
                        <text style="color: white">Ultimate Collection</text>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="navbg" href="/Overzichten/SupportScreen">
                        <text style="color: white">Support</text>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="navbg" href="/Overzichten/MyCollection">
                        <text style="color: white">My Collection</text>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="navbg" href="/Login/LoginScreen">
                        <text style="color: white">My Account/Login</text>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>


<div class="container-fluid position-absolute" id="Cont">
    <form method="post" style="height: 100%">
        <div class="row" id="row">
            <div class="col-6" style="background-color: @Model.Kleuren.Background" id="Row1">
                <div class="col d-flex justify-content-center" id="listbox" style="margin-top: 35px; margin-right: 32px">
                    <ul style="list-style-type:none">
                        <li id="List1" style="border-bottom: none">
                            <div class="form-group">
                                <input asp-for="BoekData.Titel" type="text" class="form-control" placeholder="Titel" required style="text-align: center"/>
                                <span class="invalid-feedback" asp-validation-for="BoekData.Titel"></span>
                            </div>
                        </li>
                        <li id="List1" style="border-bottom: none">
                            <div class="form-group">
                                <input asp-for="BoekData.Uitgavejaar" type="number" class="form-control" placeholder="Uitgavejaar" data-maxlength="4" oninput="this.value=this.value.slice(0,this.dataset.maxlength)" required style="text-align: center"/>
                                <span class="invalid-feedback" asp-validation-for="BoekData.Uitgavejaar"></span>
                            </div>
                        </li>
                        <li id="List1" style="border-bottom: none">
                            <div class="form-group">
                                <input asp-for="BoekData.Isbn" type="number" class="form-control" placeholder="Isbn" min="1000000000" data-minLength="10" data-maxlength="13" oninput="this.value=this.value.slice(0,this.dataset.maxlength)" required style="text-align: center"/>
                                <span class="invalid-feedback" asp-validation-for="BoekData.Isbn"></span>
                            </div>
                        </li>
                        <li id="List1" style="border-bottom: none">
                            <div class="form-group">
                                <input asp-for="BoekData.Blzs" type="number" class="form-control" placeholder="Blzs" required style="text-align: center"/>
                                <span class="invalid-feedback" asp-validation-for="BoekData.Blzs"></span>
                            </div>
                        </li>
                        <li id="List1" style="border-bottom: none">
                            <div class="form-group">
                                <input asp-for="BoekData.Reeks" type="text" class="form-control" placeholder="Reeks" required style="text-align: center"/>
                                <span class="invalid-feedback" asp-validation-for="BoekData.Reeks"></span>
                            </div>
                        </li>
                        <li id="List1">
                            <div class="form-group">
                                <input asp-for="BoekData.Uitgeverij" type="text" class="form-control" placeholder="Uitgeverij" required style="text-align: center"/>
                                <span class="invalid-feedback" asp-validation-for="BoekData.Uitgeverij"></span>
                            </div>
                        </li>
                        <div class="form-check">
                                                        <input class="form-check-input" asp-for="BoekData.Nsfw" type="checkbox" value="true" id="flexCheckDefault">
                                                        <label class="form-check-label" for="flexCheckDefault">
                                                            NSFW
                                                        </label>
                                                    </div>
                    </ul>

                </div>
                <div class="row d-flex justify-content-center">
                    <button id="UpdateBook" type="submit" style="background-color: @Model.Kleuren.active; color: white; border-radius: 5px; border: none; width: 175px; height: 40px; margin-top: 125px">Add Book</button>
                </div>

            </div>

            <div class="col-6" style="background-color: @Model.Kleuren.Achtergrond" id="Row2">
                <P>Vul volledig in.</P>
                <P>Bij onvolledige informatie word de bijdrager niet toegevoegd.</P>
                <div class="row d-flex justify-content-center align-items-center position-absolute" style="margin-top: 25px">
                    <div class="col">
                        <ul style="list-style-type:none">
                            <li id="List1" style="border-bottom: none">
                                <div class="form-group">
                                    <input asp-for="BoekData.Naam1" type="text" class="form-control" placeholder="Auteur1" maxlength="128" style="text-align: center"/>
                                    <span class="invalid-feedback" asp-validation-for="BoekData.Naam1"></span>
                                </div>
                            </li>
                            <li id="List1" style="border-bottom: none">
                                <div class="form-group">
                                    <input asp-for="BoekData.Geboortedatum1" type="date" class="form-control" placeholder="JJJJ-MM-DD" style="text-align: center"/>
                                    <span class="invalid-feedback" asp-validation-for="BoekData.Geboortedatum1"></span>
                                </div>
                            </li>
                            <li id="List1" style="border-bottom: none">
                                <div class="form-group">
                                    <input asp-for="BoekData.Sexe1" type="text" class="form-control" placeholder="Sexe" pattern="[m,v,o]" maxlength="1" oninput="this.value = this.value.replace(/[^mvo]/, '')" required style="text-align: center"/>
                                    <span class="invalid-feedback" asp-validation-for="BoekData.Sexe1"></span>
                                </div>
                            </li>
                            <li id="List1">
                                <div class="form-group">
                                    <input asp-for="BoekData.Wikilink1" type="text" class="form-control" placeholder="Wiki-link" maxlength="128" style="text-align: center"/>
                                    <span class="invalid-feedback" asp-validation-for="BoekData.Wikilink1"></span>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="col">
                        <ul style="list-style-type:none">
                            <li id="List1" style="border-bottom: none">
                                <div class="form-group">
                                    <input asp-for="BoekData.Naam2" type="text" class="form-control" placeholder="Auteur2" maxlength="128" style="text-align: center"/>
                                    <span class="invalid-feedback" asp-validation-for="BoekData.Naam2"></span>
                                </div>
                            </li>
                            <li id="List1" style="border-bottom: none">
                                <div class="form-group">
                                    <input asp-for="BoekData.Geboortedatum2" type="date" class="form-control" placeholder="JJJJ-MM-DD" style="text-align: center"/>
                                    <span class="invalid-feedback" asp-validation-for="BoekData.Geboortedatum2"></span>
                                </div>
                            </li>
                            <li id="List1" style="border-bottom: none">
                                <div class="form-group">
                                    <input asp-for="BoekData.Sexe2" type="text" class="form-control" placeholder="Sexe" pattern="[m,v,o]" maxlength="1" oninput="this.value = this.value.replace(/[^mvo]/, '')" style="text-align: center"/>
                                    <span class="invalid-feedback" asp-validation-for="BoekData.Sexe2"></span>
                                </div>
                            </li>
                            <li id="List1">
                                <div class="form-group">
                                    <input asp-for="BoekData.Wikilink2" type="text" class="form-control" placeholder="Wiki-link" maxlength="128" style="text-align: center"/>
                                    <span class="invalid-feedback" asp-validation-for="BoekData.Wikilink2"></span>
                                </div>
                            </li>
                        </ul>
                    </div>

                    <div class="col">
                        <ul style="list-style-type:none">
                            <li id="List1" style="border-bottom: none">
                                <div class="form-group">
                                    <input asp-for="BoekData.TekenNaam" type="text" class="form-control" placeholder="Tekenaar naam" maxlength="128" style="text-align: center"/>
                                    <span class="invalid-feedback" asp-validation-for="BoekData.TekenNaam"></span>
                                </div>
                            </li>
                            <li id="List1" style="border-bottom: none">
                                <div class="form-group">
                                    <input asp-for="BoekData.TekenGeboortedatum" type="date" class="form-control" placeholder="JJJJ-MM-DD" style="text-align: center"/>
                                    <span class="invalid-feedback" asp-validation-for="BoekData.TekenGeboortedatum"></span>
                                </div>
                            </li>
                            <li id="List1" style="border-bottom: none">
                                <div class="form-group">
                                    <input asp-for="BoekData.TekenSexe" type="text" class="form-control" placeholder="Sexe" pattern="[m,v,o]" maxlength="1" oninput="this.value = this.value.replace(/[^mvo]/, '')" style="text-align: center"/>
                                    <span class="invalid-feedback" asp-validation-for="BoekData.TekenSexe"></span>
                                </div>
                            </li>
                            <li id="List1">
                                <div class="form-group">
                                    <input asp-for="BoekData.TekenWikilink" type="text" class="form-control" placeholder="Wiki-link" maxlength="128" style="text-align: center"/>
                                    <span class="invalid-feedback" asp-validation-for="BoekData.TekenWikilink"></span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>